<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/Display"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="#D7D6D6"
        android:gravity="center"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#3A3A3A"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintOverlap" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Display">

        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:text="CE"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:text="C"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btnCE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnBS"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:text="BS"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btnC"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:text="/"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btnBS"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCE"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="8"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintTop_toBottomOf="@id/btnC"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="9"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintTop_toBottomOf="@id/btnBS"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintTop_toBottomOf="@id/btnDivide"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="5"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="6"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btnMultiply"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="2"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="3"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintTop_toBottomOf="@id/btnMinus"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnPlusOrMinus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="+/-"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:backgroundTint="#8BFFFFFF"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btnPlusOrMinus"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="."
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintTop_toBottomOf="@id/btn3"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/btnDot"
            app:layout_constraintTop_toBottomOf="@id/btnPlus"
            app:layout_constraintWidth_percent="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>